<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="40dp">


        <TextView
            android:id="@+id/userid_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="40dp"
            android:text="123:"
            android:textSize="14dp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:layout_toEndOf="@+id/userid_txt"
            app:cardCornerRadius="5sp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignEnd="@+id/userid_txt" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/id_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/card1"
            android:text="id :"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_txt"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/card1"
            android:text="Title :"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/body_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_txt"
            android:layout_toEndOf="@+id/card1"
            android:text="Body :"
            android:textColor="#4CAF50"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_txt"
            android:layout_toEndOf="@+id/body_txt"
            android:text="$"
            android:textColor="#4CAF50"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/description_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/body_txt"
            android:layout_toEndOf="@+id/card1"
            android:text="description"
            android:textSize="14sp" />

    </RelativeLayout>


</RelativeLayout>